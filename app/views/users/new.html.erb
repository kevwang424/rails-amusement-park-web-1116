<h1>Sign Up!</h1>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name%><br>
  <%= f.label :height %>
  <%= f.text_field :height, :value => 0 %><br>
  <%= f.label :happiness %>
  <%= f.text_field :happiness , :value => 0%><br>
  <%= f.label :nausea %>
  <%= f.text_field :nausea, :value => 0%><br>
  <%= f.label :tickets%>
  <%= f.text_field :tickets, :value => 0%><br>
  <%= f.label :admin%>
  <%= f.check_box :admin%><br>
  <%= f.label :password  %>
  <%= f.password_field :password %><br>
  <%= f.label "Confirm Password" %>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit %>
<% end %>
